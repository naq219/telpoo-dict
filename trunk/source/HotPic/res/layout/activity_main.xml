<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed" >

    <ImageView
        style="@style/form_ff"
        android:scaleType="centerCrop"
        android:src="@drawable/bg1" />

    <RelativeLayout
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/temptop"
        android:layout_width="match_parent"  android:layout_below="@+id/fm_top"
        android:layout_height="wrap_content" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nhap tu vao day" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/realTabContent"
        style="@style/form_ff"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/temptop" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/fm_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/bg_top"
        android:paddingRight="7dp" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="English -  Vietnamese"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_height"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvTitle"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:src="@drawable/chuyendoi" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_height_menu"
        android:layout_marginRight="7dp"
        android:paddingBottom="@dimen/top_height_menu_fix"
        android:paddingLeft="3dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:src="@drawable/menu" />

</RelativeLayout>